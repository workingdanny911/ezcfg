{
    "name": "ezcfg",
    "version": "0.1.0",
    "description": "Lite and easy configuration management for Node.js",
    "license": "MIT",
    "author": "Sangwoo Hyun <wkdny.hyun@gmail.com>",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist",
