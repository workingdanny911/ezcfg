        "test": "vitest run",
        "test:watch": "vitest"
    },
    "dependencies": {
        "dotenv": "^17.2.3"
    },
    "devDependencies": {
        "@types/node": "^25.1.0",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18"
    },
    "keywords": [
        "config",
        "configuration",
        "env",
        "environment",
        "typescript",
        "type-safe"
    ]
